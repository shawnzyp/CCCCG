{
  "name": "ccccg",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build:levels": "node tools/build-levels.mjs",
    "build:catalog": "node tools/build-catalog.mjs",
    "build:media": "node tools/transcode-launch-animation.mjs",
    "build:manifest": "node tools/generate-asset-manifest.mjs",
    "build:header": "esbuild src/header-title.jsx --bundle --format=esm --minify --outfile=scripts/header-title.js",
    "build:titles": "esbuild src/animated-titles.jsx --bundle --format=esm --minify --outfile=scripts/animated-titles.js",
    "build:dice": "esbuild src/dice-result.jsx --bundle --format=esm --minify --outfile=scripts/dice-result.js",
    "build": "npm run build:levels && npm run build:catalog && npm run build:header && npm run build:titles && npm run build:dice && npm run build:media && npm run build:fonts && npm run build:manifest",
    "build:fonts": "node tools/generate-fonts.mjs"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "ffmpeg-static": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "node-fetch": "^3.3.2",
    "ttf2woff2": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup-env.js"
    ]
  },
  "dependencies": {
    "motion": "^12.23.18",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
